{
  "name": "law-office-system",
  "version": "4.27.0",
  "description": "מערכת ניהול מתקדמת למשרד עורכי דין",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "compile-ts": "tsc",
    "compile:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "echo 'Add Prettier for formatting'",
    "css:lint": "stylelint \"**/*.css\"",
    "css:lint:fix": "stylelint \"**/*.css\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:ui": "playwright test --ui",
    "prepare": "husky install"
  },
  "keywords": [
    "law-office",
    "management",
    "firebase",
    "typescript"
  ],
  "author": "Chaim",
  "license": "UNLICENSED",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@types/firebase": "^2.4.32",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "firebase": "^9.22.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "vanilla-calendar-pro": "^3.0.5",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.ts": [
      "tsc --noEmit"
    ]
  }
}
