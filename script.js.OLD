async function extendTaskDeadlineFirebase(taskId, newDeadline, reason = "") {
  try {
    showSimpleLoading("×××¨×™×š ×ª××¨×™×š ×™×¢×“...");

    const db = window.firebaseDB;
    if (!db) throw new Error("Firebase ×œ× ××—×•×‘×¨");

